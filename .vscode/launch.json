  "version": "0.2.0",
  "configurations": [
    {
      "name": "MockCraft: Generate",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "generate",
        "sentence",
        "--word_count=10"
      ],
      "showLog": true
    },
    {
      "name": "MockCraft: Generate Password",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "generate",
        "password",
        "--length=20"
      ],
      "showLog": true
    },
    {
      "name": "MockCraft: List Types",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "generate",
        "--list"
      ],
      "showLog": true
    },
    {
      "name": "MockCraft: Seed Database",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "seed",
        "--config=configs/examples/ecommerce.yaml",
        "--db=postgres://user:pass@localhost:5432/dbname"
      ],
      "showLog": true
    },
    {
      "name": "MockCraft: Seed to CSV",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "seed",
        "--config=configs/examples/ecommerce.yaml",
        "--output=csv",
        "--dir=./output"
      ],
      "showLog": true
    },
    {
      "name": "MockCraft: Start Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "server",
        "--port=8080",
        "--config=configs/server.yaml"
      ],
      "showLog": true
    }
  ]
}